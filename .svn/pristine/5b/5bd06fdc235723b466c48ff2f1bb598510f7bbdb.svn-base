@import 'bootstrap.min.css';
@import 'primeng/resources/themes/saga-blue/theme.css';
@import 'primeng/resources/primeng.min.css';

@import 'all.min.css';
@import 'layout.scss';
@import 'custom.scss';


@import url('https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100;9..40,200;9..40,300;9..40,400;9..40,500;9..40,600;9..40,700;9..40,800&family=Roboto:wght@100;300;400;500;700;900&display=swap');
/*fonts*/
$font-roboto: 'Roboto';
$font-prompt: "Prompt", Sans-serif;

/* font sizes */
$font-small: 14px;
$font-default: 16px;
$font-large: 18px;
$font-xxl: 20px;
$heading-h1: 35px;
$heading-h2: 25px;
$heading-h3: 22px;
$heading-h4: 18px;

* {
    box-sizing: border-box;
    // margin: 0;
    // padding: 0;
}

:root {
    --color-default: #292829;
    --color-primary: #ef4c25;
    --color-secondary: #fff;
}

body {
    // font-family: $font-prompt;
    font-family: $font-roboto;
    font-weight: 300;
    font-size: $font-default;
    color: var(--color-default);
    // user-select: none;
}

h1 {
    font-size: $heading-h1;
    color: var(--color-primary);
}

h2 {
    font-size: $heading-h2;
}

h4 {
    font-size: $heading-h4;
}

main {
    padding-top: 40px;
    display: flex;
    flex-direction: column;
    height: 100dvh;

    .content-area {
        flex-grow: 1;
        overflow-x: auto;
        padding: 50px 50px 0 50px;

        @include mobile(){
            padding: 50px 15px 0 15px;
        }
    }

    footer {
        background-color: #f7f7f7;
        border-top: solid 1px #e1e1e1;
        font-size: $font-small;
        padding: 10px 0;

        .footer {
            display: flex;
            justify-content: space-between;
        }
    }
}

// bootstrap styles
.navbar {
    .navbar-brand {
        .logo {
            max-width: 160px;
            height: auto;
        }
    }
}

// scrollbar
/* width */
::-webkit-scrollbar {
    width: 10px;
}

/* Track */
::-webkit-scrollbar-track {
    background: #f1f1f1;
}

/* Handle */
::-webkit-scrollbar-thumb {
    background: #a1a1a1;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
    background: #888;
}

/* primeng css overide */
.p-multiselect{
    width: 100%;
    border-radius: 0.375rem;

    .p-multiselect-label{
        padding: .375rem .75rem;
    }
}
.p-multiselect-panel {
    .p-multiselect-header{
        padding: 0.5rem 1rem 0 1rem;

        .p-checkbox{
            margin-right: 0.5rem;
        }

        .p-multiselect-close{
            margin-left: 0.5rem;
            border-radius: 50%;
        }

        .p-multiselect-filter-container {
            .p-inputtext{
                padding-right: 1.5rem;
            }
        }
    }

    .p-multiselect-items {
        padding: 0.25rem 0.25rem;
        margin-bottom: 0;

        .p-multiselect-item {
            margin: 2px 0;
            padding: 0.5rem 0.75rem;

            .p-checkbox{
                margin-right: 0.5rem;
            }
        }
    }
}

.p-multiselect-clearable {
    .p-multiselect-label-container{
        padding-right: 1.5rem;
    }
}

.p-multiselect-filter-icon, .p-multiselect-clear-icon{
    margin-top: -.5rem;
}

.toast-container{
    width: 100%;
    z-index: 9999999;
}
.p-dropdown {
    width: 100%;
    border-radius: 0.375rem;
    align-items: center;
    .p-dropdown-label {
        padding: 0.375rem 0.75rem;
    }
}
 
.p-dropdown-panel {
    .p-dropdown-header {
        padding: 0.5rem 1rem 0 1rem;
 
       
 
        .p-dropdown-close {
            margin-left: 0.5rem;
            border-radius: 50%;
        }
 
        .p-dropdown-filter-container {
            .p-inputtext {
                padding-right: 1.5rem;
            }
        }
    }
 
    .p-dropdown-items {
        padding: 0.25rem 0.25rem;
        margin-bottom: 0;
 
        .p-dropdown-item {
            margin: 2px 0;
            padding: 0.5rem 0.75rem;
 
           
        }
    }
}
 
.p-dropdown-clearable {
    .p-dropdown-label-container {
        padding-right: 1.5rem;
    }
}
 
.p-dropdown-filter-icon,
.p-dropdown-clear-icon {
    margin-top: -0.5rem;
}


.p-dialog {
    width: 40.4rem;
    height: 44.4rem;
}

.btn{
    margin: 0.5rem;     
}

@media only screen and (min-width: 769px) and (max-width: 1024px) {
    .p-dialog {
        width: 38.4rem;
        height: 38.4rem;
    }
}
@media only screen and (min-width: 601px) and (max-width: 768px) {
    .p-dialog {
        width: 33.6rem;
        height: 33.6rem;
    }
}
@media only screen and (min-width: 426px) and (max-width: 600px) {
    .p-dialog {
        width: 30rem;
        height: 33.75rem;
        font-size: 0.875rem;
    }
    .btn {
        font-size: 0.875rem;
    }
}
@media only screen and (min-width: 321px) and (max-width: 425px) {
    .p-dialog {
        width: 20.75rem;
        height: 25rem;
    }
    .btn {
        font-size: 0.75rem;
    }
}
@media only screen and (max-width: 320px) {
    .p-dialog {
        width: 18rem;
        height: 27.5rem;
    }
    .btn {
        font-size: 0.625rem;
    }
}
