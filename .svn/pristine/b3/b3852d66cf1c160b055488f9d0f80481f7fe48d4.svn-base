<div class="custom-component">
  <h1>Security Compliance Add/Edit</h1>
  <form [formGroup]="form" (ngSubmit)="addCompliance()">
    <section class="form-container">
      <div class="row g-3">
        <div class="col-md-3">
          <label for="frameworkCategory" class="form-label"
            >Framework Category</label
          >
          <p-dropdown
            id="frameworkCategory"
            [options]="frameworkCategories"
            optionLabel="frameworkCategoryName"
            formControlName="frameworkCategory"
            placeholder="Select"
          ></p-dropdown>
        </div>
        <div class="col-md-3">
          <label for="frameworkName" class="form-label required"
            >Framework</label
          >
          <p-dropdown
            id="frameworkName"
            [options]="frameworkNames"
            optionLabel="frameworkName"
            formControlName="frameworkNames"
            placeholder="Select"
            (onChange)="setFrameworkName($event)"
          ></p-dropdown>
        </div>
        <div class="col-md-3">
          <label for="" class="form-label">Compliance Calendar</label>
          <input
            type="text"
            class="form-control"
            formControlName="complianceCalendar"
          />
        </div>
        <div class="col-md-3">
          <label for="control" class="form-label required">Control</label>
          <p-multiSelect
            id="control"
            [options]="controls"
            optionLabel="controlName"
            formControlName="controls"
            placeholder="Select Controls"
            [resetFilterOnHide]="true"
            [showClear]="true"
          ></p-multiSelect>
        </div>
      </div>
    </section>

    <div class="form-footer">
      <div class="form-footer-notes">
        <strong>Note:</strong> Lorem Ipsum is simply dummy text of the printing
        and typesetting industry.
      </div>
      <div class="tbl-footer-btn">
        <button class="btn btn-secondary" type="reset">
          <i class="fa-solid fa-xmark"></i> Reset
        </button>
        <button class="btn btn-primary" type="submit">
          <i class="fa-solid fa-plus"></i> Add Compliance
        </button>
      </div>
    </div>
  </form>

  <form [formGroup]="dataForm">
    <section class="form-grid">
      <p-table
        [value]="rowData"
        styleClass="p-datatable-striped"
        class="p-datatable"
      >
        <ng-template pTemplate="header">
          <tr>
            <th>Framework Category</th>
            <th>Framework</th>
            <th>Control Category</th>
            <th>Control</th>
            <th>Checklist</th>
            <th>Periodicity</th>
            <th>Department</th>
            <th>Status</th>
          </tr>
        </ng-template>
        <ng-template pTemplate="body" let-rowData let-i="rowIndex">
          <tr [formGroupName]="i" [attr.id]="'row-' + i">
            <td>{{ rowData.get("frameworkCategory").value }}</td>
            <td>{{ rowData.get("frameworkName").value }}</td>
            <td>{{ rowData.get("controlCategory").value }}</td>
            <td>{{ rowData.get("controlName").value }}</td>
            <td>
              <p-multiSelect
                [options]="
                  checklistMap[rowData.get('controlName')?.value] || []
                "
                appendTo="body"
                formControlName="checklistName"
                optionLabel="controlChecklist"
                [placeholder]="getChecklistPlaceholder(rowData)"
                [filter]="true"
                (onClear)="clearChecklist(i)"
                (onChange)="setChecklist($event, i); onFieldChange(i)"
                [showClear]="true"
                [disabled]="rowData.get('checklistName')?.disabled"
              ></p-multiSelect>
            </td>
            <td>
              <p-dropdown
                [options]="periodicities"
                appendTo="body"
                optionLabel="name"
                optionValue="value"
                formControlName="periodicity"
                [placeholder]="
                  rowData.get('periodicity')?.value !== null
                    ? rowData.get('periodicity').value
                    : 'Annually'
                "
                (onChange)="isPeriodicityOnEvent($event, i); onFieldChange(i)"
              ></p-dropdown>
            </td>

            <td>
              <p-multiSelect
                [options]="departments"
                appendTo="body"
                formControlName="departments"
                [filter]="true"
                [placeholder]="getDepartmentPlaceholder(rowData)"
                (onChange)="setDepartment($event, i)"
                (onClear)="clearDepartment(i)"
                [showClear]="true"
              ></p-multiSelect>
            </td>
            <!-- [placeholder]=" -->
            <!-- rowData.get('departments').value.length -->
            <!-- ? rowData.get('departments').value.join(', ') -->
            <!-- : 'Select Department' -->
            <!-- " -->
            <td>
              <p-dropdown
                [options]="statuses"
                appendTo="body"
                formControlName="evidenceComplianceStatus"
                optionLabel="name"
                optionValue="value"
                [filter]="true"
                [placeholder]="
                  rowData.get('evidenceComplianceStatus').value !== null
                    ? rowData.get('evidenceComplianceStatus').value
                      ? 'Active'
                      : 'Inactive'
                    : 'Select Status'
                "
                (onChange)="setEvidenceComplianceStatus($event, i)"
              ></p-dropdown>
            </td>
          </tr>
        </ng-template>
      </p-table>

      <div class="tbl-footer">
        <div class="tbl-footer-notes">
          <strong>Note:</strong> Lorem Ipsum is simply dummy text of the
          printing and typesetting industry.
        </div>
        <div class="tbl-footer-btn">
          <button
            class="btn btn-secondary"
            type="button"
            (click)="resetTable()"
          >
            <i class="fa-solid fa-xmark"></i> Reset
          </button>
          <button
            class="btn btn-primary"
            type="button"
            (click)="submitSuccess()"
            [disabled]="!isComplianceValid"
          >
            <i class="fa-solid fa-floppy-disk"></i> Submit
          </button>
        </div>
      </div>
    </section>
  </form>

  <!-- modal for calendar -->
  <p-dialog
    [(visible)]="displayEventDateModal"
    [modal]="true"
    header="Select Event Date"
    [closable]="false"
  >
    <div class="p-fluid">
      <div class="p-field">
        <label for="eventDate">Event Date</label>
        <p-calendar
          [(ngModel)]="eventDate"
          view="month"
          placeholder="select Date"
          [dateFormat]="monthYearFormat"
          inputId="eventDate"
          [minDate]="minDate"
          [maxDate]="maxDate"
          (ngModelChange)="saveDate($event)"
        ></p-calendar>
      </div>
      <div class="p-dialog-footer">
        <button
          class="btn btn-primary"
          type="button"
          label="Submit"
          icon="pi pi-check"
          (click)="submitEventDate()"
        >
          Submit
        </button>
      </div>
    </div>
  </p-dialog>
</div>

@if(loading){
<div class="card flex justify-content-center prime-spinner">
  <p-progressSpinner
    styleClass="w-2rem h-2rem"
    strokeWidth="4"
    fill="var(--surface-ground)"
  />
</div>
}
